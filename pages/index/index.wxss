@import "../common/common.wxss";

button {
  margin-bottom: 30rpx;
}

button:last-child {
  margin-bottom: 0;
}

.page-section-title {
  padding: 0;
}

.page-section-title {
  margin-top: 60rpx;
  position: relative;
}

.info {
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.display-flex {
  display: flex;
}

/* swiper */

.swiper-item {
  display: block;
  height: 355rpx;
}

.swiper-item image {
  width: 100%;
  height: 100%;
}

/* nav 幻灯片下面的菜单 */

.nav {
  position: relative;
  z-index: 99;
  display: flex;
  border-top: 1rpx solid #d1d3d4;
  border-bottom: 1rpx solid #d1d3d4;
  background: #fff;
}

.nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  height: 60rpx;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.content {
  display: inline-block;
  /*font-weight: bold;*/
}

.icon {
  display: inline-block;
  border: 4rpx solid transparent;
  border-top: 4rpx solid #9b9b9b;
  margin-left: 5rpx;
}

.nav-son.active .content {
  color: #3bd376;
}

.nav-son.active .icon {
  border-bottom: 4rpx solid #3bd376;
  border-top: 0;
}

/* 下拉中内容 */

.slidup {
  animation: slidup 0.2s ease-in both;
  display: none;
}

/* position：relative；和子级div设置position:absolute后 */

.slidown {
  transform: translateY(0%);
  position: fixed;
  z-index: 4;
  font-size: 28rpx;
  display: block;
  width: 100%;
  height: auto;
  overflow-y: scroll;
  background: #fff;
  color: #666;
  border-bottom: 1rpx #d1d3d4 solid;
}

.slidownmargin {
  overflow-y: scroll;
  padding: 0rpx 0 20rpx 0;
}

.slidownlist {
  margin-top: 10rpx;
  padding: 10rpx;
  flex-direction: row;
  flex-wrap: wrap;
  display: flex;
}

.sdbitem {
  width: auto;
  height: auto;
  text-align: center;
  border: solid #ccc 1rpx;
  border-radius: 60rpx;
  margin: 15rpx 10rpx 0rpx 10rpx;
  justify-content: space-between;
  padding: 8rpx 16rpx 8rpx 16rpx;
  float: left;
}

.sdbitem.active {
  border: solid #3bdb78 1rpx;
  background-color: #4afdc111;
}

/* 排序 */

.order-list {
  height: auto;
  font-size: 28rpx;
  color: #717273;
  line-height: 60rpx;
  margin: 5rpx 5% 0 5%;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 选中 */

.order-list.active {
  color: #3bd376;
}

.order-list .icon-right {
  float: right;
}

/* 科目 */

.quyu-left {
  float: left;
  width: 160rpx;
  height: auto;
  line-height: 60rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #717273;
  background: #fff;
  margin-right: 20rpx;
}

.quyu-left view {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-left: 25rpx;
  border-right: 1rpx solid #c5c5c5;
  border-top: 1rpx solid #c5c5c5;
}

.quyu-left .active {
  border-right: 0;
}

/* 顶部无边框 */

.quyu-left .border-top-none {
  border-top: 0;
}

.quyu-center {
  float: right;
  width: 573rpx;
}

/* 过滤 */

.filter-list {
  width: 100%;
  height: 30rpx;
  margin: 10rpx;
  display: block;
  padding: 20rpx;
}

.filter-left {
  float: left;
  height: 40rpx;
  width: 200rpx;
  padding: 0 30rpx 0 30rpx;
}

.filter-right {
  float: left;
  width: 300rpx;
  height: 30rpx;
}

.filter-input {
  float: left;
  width: 300rpx;
  line-height: 26rpx;
  font-size: 22rpx;
  height: 26rpx;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  background: #c5c5c505;
  border: 1rpx solid #c5c5c517;
}

/* 选择菜单时灰色背景 */

.fullbg {
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 2s;
  opacity: 0;
  display: none;
}

.fullopacity {
  opacity: 0.1;
  display: block;
}
