@import "../common/common.wxss";

button{
  margin-bottom: 30rpx;
}
button:last-child{
  margin-bottom: 0;
}
.page-section-title{
  padding: 0;
}
.page-section-title{
  margin-top: 60rpx;
  position: relative;
}
.info{
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}

.show {
  display: block;
}
.hidden {
  display: none;
}
.display-flex {
  display: flex;
}
/* swiper */
.swiper-item{
  display: block;
  height: 335rpx;
}
.swiper-item image{
  width: 100%;
  height: 100%;
}

/* nav 幻灯片下面的菜单 */
.nav {
  position: relative;
  z-index: 99;
  display: flex;
  border-top: 1px solid #d1d3d4;
  border-bottom: 1px solid #d1d3d4;
  background: #fff;
}
.nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  height: 40px;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}
.icon {
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #9b9b9b;
  margin-left: 5px;
}
.content {
  display: inline-block;
  /*font-weight: bold;*/
  font-size: 36rpx;
}

.nav-son.active .content {
  color: #3bd376;
}
.nav-son.active .icon {
  border-bottom: 4px solid #3bd376;
  border-top: 0;
}

/* 下拉中内容 */
.slidup {
  animation: slidup 0.2s ease-in both;
  display: none;
}
/* position：relative；和子级div设置position:absolute后 */
.slidown {
  transform: translateY(0%);
  position: relative;
  z-index: 4;
  font-size: 14px;
  display: block;
  width: 100%;
  height: auto;
  overflow-y: scroll;
  background: #fff;
  color: #666;
  border-bottom: 1rpx #d1d3d4 solid;
  left:0rpx;
  top: 0rpx;
}
.slidownmargin{
  height: auto;
  margin-bottom: 20rpx; 
}
.slidownlist {
  margin-top: 10rpx;
  padding: 10rpx;
  flex-direction: row;
  flex-wrap: wrap;
  display: flex;
}
.sdbitem {
  width: auto;
  text-align: center;
  border: solid #ccc 1rpx;
  border-radius: 60rpx;
  margin: 15rpx 10rpx 0rpx 10rpx;
  justify-content: space-between;
  padding: 8rpx 16rpx 8rpx 16rpx;
  float: left;
}
.sdbitem.active{  
  border: solid #3bdb78 1rpx;
  background-color: #4afdc111;
}

/* 科目 */
.quyu-left {
float:left;
width:160rpx;
height:auto;
line-height:80rpx;
box-sizing:border-box;
font-size:14px;
color:#717273;
background:#fff;
margin-right: 20rpx; 
}
.quyu-left view {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-left: 25rpx;
  border-right: 1px solid #c5c5c5;
  border-top: 1px solid #c5c5c5;
}
.quyu-left .active{ 
  border-right: 0;
}
.quyu-left .frist{ 
  border-top: 0;
}
/* 选择菜单时灰色背景 */
.fullbg {
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 2s;
  opacity: 0;
}
.fullopacity {
  opacity: 0.1;
}