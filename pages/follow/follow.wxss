/* 列表显示 */
.list-item {
  width: 100%;
  height: 193rpx;
  font-size: 22rpx;
}

.list-avatar {
  float: left;
  height: 140rpx;
  width: 140rpx;
  margin-top: 30rpx;
  margin-right: 16rpx;
  margin-left: 28rpx;
  border: 1rxp solid #ccc;
  border-radius: 12rpx;
}

.list-right {
  float: left;
  width: 520rpx;
  height: auto;
  padding-bottom: 20rpx;
  padding-top: 28rpx;
  border-top: 1rpx solid #ccc;
}

.list-right.border-top-none {
  border-top: 0;
}

.list-right-row {
  float: left;
  width: 520rpx;
}

.list-name {
  font-size: 30rpx;
  float: left;
  max-width: 350rpx;
  margin-right: 8rpx;
}

.list-gender {
  float: left;
  height: 30rpx;
