<!-- 教师身份完善资料 -->
<view hidden="{{flag == 1 ? false : true}}">
  <view class='base-info'>基本信息 </view>
  <view class='name-cell'>
    <view class='name-name'>姓名</view>
    <view class='name-value' data-flag='11' bindtap='setFlag'>
      {{formData['name'] ? formData['name']: '请输入您的真实姓名'}}
    </view>
    <view class="navigator-arrow" data-flag='11' bindtap='setFlag'></view>
  </view>
  <view class='name-cell'>
    <view class='name-name'>出生日期</view>
    <picker mode="date" value="{{birthday}}" start="{{startDay}}" end="{{today}}" bindchange="bindDateChange">
      <view class='name-value'>{{birthday}}</view>
      <view class="navigator-arrow"></view>
    </picker>
  </view>
  <view class='name-cell'>
    <view class='name-name'>性别</view>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{genderArray}}" data-type='genderSelected'>
      <view class='name-value'>{{genderSelected != 1 && genderSelected != 0 ? '请选择' : genderArray[genderSelected]}}</view>
      <view class="navigator-arrow"></view>
    </picker>
  </view>
  <view class='name-cell'>
    <view class='name-name'>所在城市</view>
    <picker mode="region" bindchange="bindPickerChange" value="{{region}}" data-type='region'>
      <view class='name-value'> {{region[0]}} {{region[1]}} {{region[2]}}</view>
      <view class="navigator-arrow"></view>
    </picker>
  </view>
  <view class='base-info'>授课相关 </view>
  <view class='name-cell'>
    <view class='name-name'>可授科目</view>
    <view class='name-value' data-flag='12' bindtap='setFlag'>
    {{subjectValue ? subjectValue : '请选择'}}
    </view>
    <view class="navigator-arrow" data-flag='12' bindtap='setFlag'></view>
  </view>
  <view class='name-cell'>
    <view class='name-name'>可授课时间</view>
     <view class='name-value' data-flag='13' bindtap='setFlag'>
      {{formData['teachTime'] ? formData['teachTime']: '请输入您可授课的时间'}}
    </view>
    <view class="navigator-arrow"></view>
  </view>
  <view class='name-cell'>
    <view class='name-name'>课时费</view>
    <picker mode="multiSelector" bindchange="bindPickerChange" value="{{priceDataIndex}}" range="{{priceData}}" data-type='price'>
      <view class='name-value'>
        {{price ? '￥' + priceData[0][price[0]] + '元/' + priceData[1][price[1]] : '每课时费用(人民币)'}} {{}}</view>
      <view class="navigator-arrow"></view>
    </picker>
  </view>

  <!-- 带箭头的样式
  <view class='name-cell'>
    <view class='name-name'>姓名</view>
    <view class='name-value'>展示给家长的昵称</view>
    <view class="navigator-arrow"></view>
  </view>
  -->
    <button class='commit-data' type="primary" bindtap='setFlag' data-flagdata='teacherBase' data-flag='{{myFlag}}'>完成</button>
</view>

<!-- 修改姓名 -->
<view hidden="{{flag == 11 ? false : true}}">
  <form catchsubmit="formSubmit" catchreset="formReset">
    <view class='base-info modify-cell'>
      <button class='cancel' formType="reset" bindtap='setName' data-flag='{{myFlag}}'>取消</button>
      <button class='commit' type="primary" formType="submit" bindtap='setName' data-flag='{{myFlag}}'>完成</button>
    </view>
    <view class='name-cell name-modify'>
      <view class='name-input'>
        <input name='name'></input>
      </view>
    </view>
    <view class='modify-prompt'>
      4-20个字符，可由中英文、空格组成
    </view>
  </form>
</view>

<!-- 修改可授科目年级 -->
<view hidden="{{flag == 12 ? false : true}}">
  <view wx:for="{{subjectData}}" data-value="{{item.i}}" data-flag="122" data-nav="{{index}}" wx:key="unique" class="name-cell {{index==0 ? 'border-top' : ''}}" bindtap="selectNext">
    <view class='name-name name-name-item'>{{item.i}}</view>
    <view class="navigator-arrow"></view>
  </view>
</view>

<!-- 修改可授科目年级下学科 -->
<view hidden="{{flag == 122 ? false : true}}">
      <checkbox-group bindchange="checkboxChange">
        <label wx:for="{{subjectData[subjectNext]['v']}}" wx:key="unique">
    <view class="name-cell modify-cell-checkbox {{index==0 ? 'border-top' : ''}}">
          <view class="name-name name-checkbox">
            <checkbox name="subject" value="{{item.name}}" checked="{{item.checked}}" />
          </view>
          <view class="name-checkbox-value">{{item.name}}</view>
    </view>
        </label>
      </checkbox-group>
    <view class='base-info modify-cell'>
     <vime class='cancel modify-cell-commit' data-flag='1' bindtap='subjectCancel'>取消</vime> 
      <vime class='commit modify-cell-commit' data-flag='1' bindtap='subjectcommit'>完成</vime>
     <!--   <button type="primary" class="modify-cell-button">完成</button> -->
    </view>
</view>
<!-- 修改授课时间 -->
<view hidden="{{flag == 13 ? false : true}}">
  <form catchsubmit="formSubmit" catchreset="formReset">
    <view class='base-info modify-cell'>
      <button class='cancel' formType="reset" bindtap='setName' data-flag='{{myFlag}}'>取消</button>
      <button class='commit' type="primary" formType="submit" bindtap='setName' data-flag='{{myFlag}}'>完成</button>
    </view>
    <view class='name-cell name-modify'>
      <view class='name-input'>
        <input name='teachTime'></input>
      </view>
    </view>
    <view class='modify-prompt'>
      4-20个字符，可由中英文、数字、冒号、空格组成
    </view>
  </form>
</view>

<!-- 学生身份完善资料 -->
<view hidden="{{flag == 2 ? false : true}}">
  学生
</view>




<!-- 教师身份我的界面 -->
<view hidden="{{flag == 3 ? false : true}}">

    <!-- detail -->
    <view class='detail-item'>
      <image class='detail-avatar' src='{{teacherDetail.avatar}}'></image>
      <view class="detail-right  {{index==0 ? 'border-top-none' : ''}}">
        <view class='detail-right-row'>
          <view class='detail-name'>{{teacherDetail.teacherName}}</view>
          <image class='detail-gender' src='{{teacherDetail.genderPic}}'></image>
          
        </view>
        
        <view class='detail-right-row'>
          <view class="{{ teacherDetail.graduation == '专职教师' ? 'detail-graduation-tch' : 'detail-graduation-std'}}">{{teacherDetail.graduation}}</view>
          <view class='detail-auth'>{{teacherDetail.auth}}</view>
        </view>

        <view class='detail-right-row'>
          <view class='detail-university'>评分： {{teacherDetail.score}}</view>
        </view>

        <view class='detail-right-row'>
          <view class='detail-grade'>{{teacherDetail.lastLongin}}</view>
          <view class='detail-education'>{{teacherDetail.distance}}</view>
          <view class='detail-price'>{{teacherDetail.price}}</view>
        </view>

      </view>
    </view>

</view>


<!-- 初始设置身份 -->
<view class="first-set" hidden="{{flag == 0 ? false : true}}">
  <image class="first-set-bg" src='../../image/first-set.png'></image>
  <view class='first-set-teacher' bindtap='setFlag' data-flag='1' data-flagdata='first'>教师</view>
  <view class='first-set-student' bindtap='setFlag' data-flag='2' data-flagdata='first'>学生</view>
</view>